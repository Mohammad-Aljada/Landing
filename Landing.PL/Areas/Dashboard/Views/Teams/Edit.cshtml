@model TeamFormVM



@section titleStart {
    Teams
}
@section titleSeceond {
    Edit Team
}
@section Header {
  Teams
}
<div class="col-md-12">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Edit Team</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->

        <form asp-controller="Teams" asp-action="Edit" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name">Member Name </label>
                    <input asp-for="Name" class="form-control" >
                </div>
                <div class="form-group">
                    <label asp-for="bio">About Member</label>
                    <input asp-for="bio" class="form-control ">
                </div>
                <div class="form-group">
                    <label asp-for="specialty">specialty  Member</label>
                    <input asp-for="specialty" class="form-control ">
                </div>
                <div class="form-group">
                    <label asp-for="FacebookLink">Facebook Link</label>
                    <input asp-for="FacebookLink" class="form-control " >
                </div>

                <div class="form-group">
                    <label asp-for="LinkendInLink">LinkendIn Link</label>
                    <input asp-for="LinkendInLink" class="form-control " >
                </div>

                <div class="form-group">
                    <label asp-for="InstgramLink">Instgram Link</label>
                    <input asp-for="InstgramLink" class="form-control ">
                </div>
                <div class="form-group">
                    <label asp-for="Image">Upload Image</label>
                    <input asp-for="Image" class="imageInput">
                </div>
                <div class="form-group">
                    <img src="#" id="imagePreview" width="50" style="display:none" alt="this is image team" />
                </div>


            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-info">Edit</button>
                <a class="btn btn-secondary btn-md  " asp-controller="Teams" asp-action="Index">Cancel</a>

            </div>
        </form>
    </div>
</div>

@section script {
    <script src="https://cdn.tiny.cloud/1/6flbm5mj6i3yf3fgi2p9ij1bsfnjsu15kmtzer7qs3vfeq43/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

   <script>
        document.querySelector(".imageInput").addEventListener("change", (event) => {
            const file = event.target.files[0];
            const imagePreview = document.querySelector("#imagePreview");

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    imagePreview.src = e.target.result;
                    imagePreview.style.display = "block";
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}


