@using Microsoft.AspNetCore.Identity
@using Landing.DAL.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager



<li class="dropdown">
    <a href="#"><span>Account</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
    @if (SignInManager.IsSignedIn(User))
        {
        <ul>
            <li class="nav-item d-flex gap-1">
                <img src="~/Files/images/profile.svg" width="20" alt="profile logo" style="margin:8px;" />
                <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile" title="Manage">Hello @User.Identity?.Name.Split("@")[0]!</a>

            </li>
            <li class="nav-item">
                <form class="form-inline d-flex gap-1" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <img src="~/Dashboard/img/logout.svg" width="20" alt="logout logo" style="margin:8px;" />
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
            </ul>
        }
        else
        {
        <ul>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="Register" asp-controller="Account">Register</a>
            </li>
            <hr>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="Login" asp-controller="Account">Login</a>
            </li>
        </ul>
        }

</li>