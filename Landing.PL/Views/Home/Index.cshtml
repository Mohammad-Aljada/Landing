

@{
    ViewData["Title"] = "Home Page";
    
    var sliders = ViewData["sliders"] as IEnumerable<SliderDisplayVM>;
    var services = ViewData["services"] as IEnumerable<ServiceDisplayVM>;
}
<!-- Hero Section -->
<section id="hero" class="hero section dark-background">

    <!-- <img src="~/asset/img/hero-bg.jpg" alt="" data-aos="fade-in"> -->

    <div id="hero-carousel" class="carousel carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">

        <div class="container position-relative">

            @if (sliders != null && sliders.Any())
            {
                // Convert the IEnumerable to a List
                var sliderList = sliders.ToList();

                for (int i = 0; i < sliderList.Count; i++)
                {
                    var item = sliderList[i];
                    // Set the active class only for the first item (index 0)
                    var activeClass = (i == 0) ? "active" : "";
                    <div class="carousel-item @activeClass">
                        <div class="carousel-container">
                            <h2>@item.Title</h2>
                            <p>@Html.Raw(item.Description)</p>
                            <a href="@item.Link" class="btn-get-started">Read More</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No sliders available.</p>
            }
            <!-- End Carousel Item -->
            <a class="carousel-control-prev" href="#hero-carousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
            </a>

            <a class="carousel-control-next" href="#hero-carousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
            </a>

            <ol class="carousel-indicators"></ol>

        </div>

    </div>

</section><!-- /Hero Section -->
<!-- Featured Services Section -->
<section id="featured-services" class="featured-services section">

    <div class="container">

        <div class="row gy-4">

            @if (services != null && services.Any())
            {
                @foreach (var item in services)
                {
                    <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="service-item item-cyan position-relative">
                            <div class="icon">
                                <img src="~/Files/images/@item.ImageName" alt="@item.Name service photo" />
                            </div>
                            <a asp-action="Details" asp-controller="Services" asp-route-id="@item.Id" class="stretched-link">
                                <h3>@item.Name</h3>
                            </a>
                            <p>@Html.Raw(item.Description)</p>
                        </div>
                    </div>

                    <!-- End Service Item -->
                }
            }
            else
            {
                <p>No services available.</p>
            }
        </div>

    </div>

</section><!-- /Featured Services Section -->
