@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassowrd";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<!-- Reset Passowrd form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Reset Passowrd</h2>
                <form method="POST" class="register-form" id="register-form" asp-action="ResetPassword" asp-controller="Account">
                    <input asp-for="Email" type="hidden" />
                    <input asp-for="Token" type="hidden" />

                    <div class="form-group">
                        <label asp-for="NewPassword"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="NewPassword" placeholder="Enter New Password" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="ConfirmPassword" placeholder="Repeat your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Change Password" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/Form/images/signup-image.jpg" alt="sing up image"></figure>
            </div>
        </div>
    </div>
</section>


