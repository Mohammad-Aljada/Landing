 <!-- Clients Section -->
    <section id="clients" class="clients section">

      <div class="container">

        <div class="swiper init-swiper">
          <script type="application/json" class="swiper-config">
            {
              "loop": true,
              "speed": 600,
              "autoplay": {
                "delay": 5000
              },
              "slidesPerView": "auto",
              "pagination": {
                "el": ".swiper-pagination",
                "type": "bullets",
                "clickable": true
              },
              "breakpoints": {
                "320": {
                  "slidesPerView": 2,
                  "spaceBetween": 40
                },
                "480": {
                  "slidesPerView": 3,
                  "spaceBetween": 60
                },
                "640": {
                  "slidesPerView": 4,
                  "spaceBetween": 80
                },
                "992": {
                  "slidesPerView": 6,
                  "spaceBetween": 120
                }
              }
            }
          </script>
          <div class="swiper-wrapper align-items-center">
               @if (clients != null &&  clients.Any())
{
            @foreach(var item in  clients)
            {
              
           <div class="swiper-slide"><img src="~/Files/images/@item.ImageName" class="img-fluid" alt="this is client image :@item.Name"></div>
                }
            }
            else
            {
                <p class="text-danger">No clients available.</p>
            }
          </div>
        </div>

      </div>

    </section><!-- /Clients Section -->

     <!-- Skills Section -->
    <section id="skills" class="skills section">

      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>Our Skills</h2>
        <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
      </div><!-- End Section Title -->

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row skills-content skills-animation">

            <div class="col-lg-6">
                @if (skills != null && skills.Any())
                {
                    var leftSkills = skills.Take(3); // First 4 items for the left column
                    foreach (var item in leftSkills)
                    {
                        <div class="progress">
                            <span class="skill"><span>@item.Name</span> <i class="val">@item.Value%</i></span>
                            <div class="progress-bar-wrap">
                                <div class="progress-bar" role="progressbar" style="width:@item.Value%;" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>

                        <!-- End Skills Item -->
                    }
                }
                else
                {
                    <p>No skills available.</p>
                }
            </div>

            <div class="col-lg-6">
                @if (skills != null && skills.Count() > 3)
                {
                    var rightSkills = skills.Skip(3).Take(3); // Next 4 items for the right column
                    foreach (var item in rightSkills)
                    {
                        <div class="progress">
                            <span class="skill"><span>@item.Name</span> <i class="val">@item.Value%</i></span>
                            <div class="progress-bar-wrap">
                                <div class="progress-bar" role="progressbar" style="width:@item.Value%;" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>

                        <!-- End Skills Item -->
                    }
                }
            </div>

            

          </div>

        

        </div>

      </div>

    </section><!-- /Skills Section -->