
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var teams = ViewData["teams"] as IEnumerable<TeamDisplayVM>;

}

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container position-relative">
        <h1>Team</h1>
        <p>Esse dolorum voluptatum ullam est sint nemo et est ipsa porro placeat quibusdam quia assumenda numquam molestias.</p>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="current">Team</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->
<!-- Team Section -->
<section id="team" class="team section">

    <div class="container">

        <div class="row gy-5">

            @if (teams != null && teams.Any())
            {
                @foreach (var item in teams)
                {
                    <div class="col-lg-4 col-md-6 member" data-aos="fade-up" data-aos-delay="100">
                        <div class="member-img">
                            <img src="~/Files/images/@item.ImageName" class="img-fluid" alt="@item.Name photo">
                            <div class="social">
                                <a href="@item.FacebookLink"><i class="bi bi-facebook"></i></a>
                                <a href="@item.InstgramLink"><i class="bi bi-instagram"></i></a>
                                <a href="@item.LinkendInLink"><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                        <div class="member-info text-center">
                            <h4>@item.Name</h4>
                            <span>@item.specialty</span>
                            <p>@item.bio</p>
                        </div>
                    </div>

                    <!-- End Team Member -->
                }
            }
            else
            {
                <p>No team available.</p>
            }

        </div>

    </div>

</section><!-- /Team Section -->

